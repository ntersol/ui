{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "$libs": ["apps/showcase/src/app/libs"],
      "$site": ["apps/showcase/src/app/site.module"],
      "$ui": ["apps/showcase/src/app/shared/stores/ui"],
      "$domain": ["apps/showcase/src/app/shared/stores/domain"],
      "$settings": ["apps/showcase/src/app/shared/stores/settings"],
      "$utils": ["apps/showcase/src/app/shared/utils"],
      "$env": ["apps/showcase/src/environments/environment.ts"],
      "$models": ["apps/showcase/src/shared/models"],
      "$modals": ["apps/showcase/src/compoments/modals"],
      "@ntersol/forms": ["libs/forms/src"],
      "@ntersol/state-management": ["libs/state-management/src"],
      "@ntersol/table": ["libs/table/src"]
    },
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "exclude": ["archive", "e2e", "**/*.spec.ts", "node_modules", "tmp"]
}
