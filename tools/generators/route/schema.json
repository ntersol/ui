{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "route",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Route Name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "project": {
      "type": "string",
      "description": "Project to add the route to"
    },
    "directory": {
      "type": "string",
      "description": "Directory to add the route to"
    }
  },
  "required": ["name", "project"]
}
